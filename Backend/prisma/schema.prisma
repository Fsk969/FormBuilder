generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Form {
  id              Int             @id @default(autoincrement())
  name            String
  slug            String          @unique
  schema          Json
  createdAt       DateTime        @default(now())
  entries         FormEntry[]
  pageFormEntries PageFormEntry[] // ðŸ‘ˆ Add this back-relation
}

model FormEntry {
  id        Int      @id @default(autoincrement())
  form      Form     @relation(fields: [formId], references: [id])
  formId    Int
  data      Json
  createdAt DateTime @default(now())
}

model Page {
  id              Int             @id @default(autoincrement())
  name            String
  slug            String          @unique
  content         Json
  createdAt       DateTime        @default(now())
  pageFormEntries PageFormEntry[] // ðŸ‘ˆ Add this back-relation
}

model PageFormEntry {
  id     Int  @id @default(autoincrement())
  page   Page @relation(fields: [pageId], references: [id])
  pageId Int

  form   Form @relation(fields: [formId], references: [id])
  formId Int

  data      Json
  createdAt DateTime @default(now())
}
